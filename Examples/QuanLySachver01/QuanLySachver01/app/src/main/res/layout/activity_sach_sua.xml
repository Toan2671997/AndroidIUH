<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sach_them"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sửa thông tin sách"
        android:gravity="center_horizontal"
        android:textSize="10pt"
        android:background="@color/nenTitle"
        android:textColor="@color/mautrang"
        android:layout_marginBottom="12px">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/suaimgsach"
            android:layout_width="100dp"
            android:layout_height="150dp"
            tools:srcCompat="@tools:sample/avatars"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/suabtn_chup"
            android:text="Chụp ảnh"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn ảnh"
            android:id="@+id/suabtn_chon"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tên sách"></TextView>
        <EditText
            android:id="@+id/suatensach"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Loại sách"></TextView>
        <Spinner
            android:id="@+id/sualoaisach"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tác giả"></TextView>
        <EditText
            android:id="@+id/suatacgia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ngày phát hành"></TextView>

        <EditText
            android:id="@+id/suangayphathanh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Trở về"></Button>
        <Button
            android:id="@+id/suabtnLuuSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Lưu"></Button>

    </LinearLayout>
</LinearLayout>