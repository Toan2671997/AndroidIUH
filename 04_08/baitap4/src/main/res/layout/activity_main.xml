<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tblLayout1"
    android:stretchColumns="*"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".MainActivity">
    <!--
    stretchColumns giup ta scale cac item trong row
    neu la number se duoc tinh la cac index cua row
    neu * duoc tinh la scale deu tat ca cac item cua row
    -->

    <TableRow>
        <Button android:text="Roll No."/>
        <Button android:text="Name"/>
        <Button android:text="Mark"/>
    </TableRow>

    <TableRow>
        <TextView
            android:gravity="center"
            android:text="101" />
        <TextView
            android:gravity="center"
            android:text="Toan"
            />
        <TextView
            android:gravity="center"
            android:text="8"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:gravity="center"
            android:text="101" />
        <TextView
            android:gravity="center"
            android:text="Tung"
            />
        <TextView
            android:gravity="center"
            android:text="7"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:gravity="center"
            android:text="102" />
        <TextView
            android:gravity="center"
            android:text="Thang"
            />
        <TextView
            android:gravity="center"
            android:text="6"
            />
    </TableRow>

    <TableRow>
        <Button
            android:text="Print"
            android:layout_span="3"
            />
        <!--
        layout_span giup ta span 1 item theo dang colspan cua web
        3 o day se span deu voi 3 button nho ben tren
        -->
    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >

        <Button
            android:layout_gravity=""
            android:layout_span="2"
            android:text="Finish" />
        <!--
        layout_span giup ta span 1 item theo dang colspan cua web
        3 o day se span deu voi 3 button nho ben tren
        -->
    </TableRow>

</TableLayout>